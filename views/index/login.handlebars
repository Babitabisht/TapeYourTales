<div class="container">
  <div class="row valign-wrapper">
    <div class="col s9 offset-s3 valign">
      <div class="card">
        <div class="card-content white-text">
          <span class="card-title">
            <h3 style="color:black">Login </h3>
          </span>


          <form action="/login" method="POST">

            <div class="row">
              <div class="input-field col s12">
                <input name="email" type="email" class="validate">
                <label for="email">Email</label>
              </div>
            </div>


            <div class="row">
              <div class="input-field col s12">
                <input name="password" type="password" class="validate">
                <label for="password">Password</label>
              </div>
            </div>


            <input type="submit" value="Submit" class="btn-large  #2196f3 blue waves-effect waves-light">
          </form>


        </div>


        <div class="card-action">
          Don't have Account ?
          <a href="/register" class="btn-small   red darken-1 waves-effect waves-light" id="act" style="margin-bottom:3px;padding:3px  center ">

            Signup </a>



        </div>
      </div>
    </div>
  </div>
</div>